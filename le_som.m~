function h = le_img(f,alfa)
f = fileread(f);
if (nargin == 1)
    alfa = unique(f);
end
h = zeros(size(alfa));
for k = 1 : length(alfa)
    i = find(f == alfa(k));
    h(k) = length(i);
end
bar(double(alfa),h);
title("Histograma do ficheiro de som");
ylabel("Ocorrencias");
xlabel("Alfabeto em código ASCII");
nomeFonte = ("soundMono.wav");
fonte = fopen(nomeFonte);
info = audioinfo(nomeFonte);
nrBits = info.BitsPerSample;
d = 1/(2^nrBits);
alfabeto = -1:d:1-d;
read = audioread(nomeFonte);
ocorrencias = histcounts(read, [alfabeto, alfabeto(end)+1]);
bar(alfabeto, ocorrencias);
title("Histograma do ficheiro de som");
ylabel("Ocorrencias");
xlabel("Alfabeto em código ASCII");
entropia = calcula_entropia2(nomeFonte);
fprintf("Limite mínimo teórico para o número médio de bits por símbolo para a fonte 'soundMono.wav':\t%f\n\n",entropia); 
HLen = hufflen(ocorrencias);
huff = Huffman(ocorrencias, HLen);
fprintf("Número médio de bits por símbolo para a fonte:\t%f\n\n",huff);

